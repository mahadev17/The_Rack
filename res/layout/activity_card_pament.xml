<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Number"
                        android:textColor="@android:color/white"
                        android:textSize="22dp" />

                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Card Number"
                            android:textColor="#a1a1a1"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/edtCardNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="16dp">
                            
                             <requestFocus />
                            </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Expiration"
                            android:textColor="#a1a1a1"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/edtExpiration"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Security Code"
                            android:textColor="#a1a1a1"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/edtSecurityCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_middle"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_lower_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Billing Address"
                            android:textColor="#a1a1a1"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/edtBillingAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_lower"
                            android:paddingLeft="8dp"
                            android:singleLine="true" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment"
                        android:textSize="22dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/white"/>
                    
                    <EditText
                        android:id="@+id/edtPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:background="@drawable/textbox1"
                        android:singleLine="true" />
                    
                   
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Ship to"
                        android:textColor="@android:color/white"
                        android:textSize="22dp" />

                        <EditText
                            android:id="@+id/edtPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:background="@drawable/textbox2"
                            android:singleLine="true" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer_bg" >
            <Button
                android:id="@+id/btnSubmitOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn"
                android:layout_centerInParent="true"/>
            
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>