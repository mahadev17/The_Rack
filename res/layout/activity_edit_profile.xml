<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/textbox3">
                    <ImageView
                        android:id="@+id/imageview_profile_edt"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile_default"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/edtNameEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Username"
                        android:textSize="16dp"
                        />
                    
                    <TextView
                        android:id="@+id/edtEmailEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Email"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        />
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" 
                        android:visibility="gone">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Name"
                            android:textSize="16dp" />

                        <EditText
                            
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_upper"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Email Id"
                            android:textSize="18dp" />

                        <EditText
                            
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_circle_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Password"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtPasswordEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_circle"
                            android:hint="Change Password"
                            android:drawableRight="@drawable/arrow_icon"
                            android:paddingLeft="8dp"
                            android:textSize="16dp"
                            android:gravity="center_vertical|left"
                            android:paddingRight="10dp"
                            android:singleLine="true" />
                    </LinearLayout>
                    
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Shoe Size"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtShoeSizeEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper"
                            android:hint="Shoe Size"
                            android:paddingLeft="8dp"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:drawableRight="@drawable/arrow_icon_down"
                            android:paddingRight="10dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_lower_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Dress Size"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/txtDressSizeEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_lower"
                            android:hint="Dress Size"
                            android:textSize="16dp"
                            android:drawableRight="@drawable/arrow_icon_down"
                            android:paddingRight="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:paddingLeft="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_upper_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="City"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/edtCityEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_upper"
                            android:hint="City"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" >

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="State"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtStateEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_middle"
                            android:gravity="center_vertical"
                            android:hint="State"
                            android:drawableRight="@drawable/arrow_icon_down"
                            android:paddingRight="10dp"
                            android:textSize="16dp"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                         android:layout_marginBottom="55dp">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_lower_text_bg"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Website"
                            android:textSize="18dp" />

                        <EditText
                            android:id="@+id/edtWebsiteEditProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/list_lower"
                            android:hint="Website"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footer" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>