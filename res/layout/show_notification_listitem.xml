<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/corner_style">
    
    <ImageView
        android:id="@+id/profile_pic_notification_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/pic"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/profile_pic_notification_item">
    <TextView
        android:id="@+id/txtLike_notification_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#a1a1a1"
        android:text="sasasaf fsaf asfasf  assdsaasafsafsafafafffsaf"
        android:layout_marginTop="10dp"
        android:textSize="14dp"/>
    
    <TextView
        android:id="@+id/txtSenderNameNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a1a1a1"
        android:textSize="14dp"
        android:text="15 hour before"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/item_pic_notification_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pic"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
		android:layout_alignParentRight="true"
        android:scaleType="fitXY"/>

</RelativeLayout>